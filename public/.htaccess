<Files ~ "^\.ht">
  Order allow,deny
  Allow from all
  Satisfy any
</Files>

# Könyvtártartalom listázás tiltása
Options -Indexes

<IfModule mod_rewrite.c>

  RewriteEngine on
  RewriteBase /
  RewriteOptions MaxRedirects=10

# Rewrite URL

  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteRule (.*) http://%1/$1 [R=301,L]

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^([^/]+)/([^/]+)/([^/]+)/?$  index.php?controller=$1&action=$2&id=$3 [L,NC]
  
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^([^/]+)/([^/]+)/?$  index.php?controller=$1&action=$2 [L,NC]
  
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^([^/]+)/?$  index.php?controller=$1&action=view [L,NC]

</IfModule>

<ifModule mod_gzip.c>
  mod_gzip_on Yes
  mod_gzip_dechunk Yes
  mod_gzip_item_include file \.(html?|txt|css|js|php|pl|jpeg\jpg\png\svg\gif)$
  mod_gzip_item_include handler ^cgi-script$
  mod_gzip_item_include mime ^text/.*
  mod_gzip_item_include mime ^application/javascript.*
  mod_gzip_item_exclude mime ^image/.*
  mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</ifModule>